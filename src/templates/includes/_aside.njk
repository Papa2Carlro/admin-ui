{% import "components/_index.njk" as components %}
{% import "database/_global.njk" as global %}

<div class="admin__aside aside">

  <div class="aside__header">
    <a href="#" class="aside__header-logo">
      <img src="/static/img/stub/Logotype.png" loading="lazy" alt="">
    </a>

    <div class="js-burger aside__header-burger">
      <img src="/static/img/stub/Icon_Menu.png" loading="lazy" alt="">
    </div>
  </div>

  <div class="aside__user">

    <a href="#" class="aside__user-avatar">
      <img src="/static/img/stub/avatar.png" loading="lazy" alt="">
    </a>

    <div class="aside__user-name">
      Sheriff <br> Woody
    </div>
  </div>

  <nav class="aside__menu menu">
    <ul class="menu__list">
      {% for menu in global.menus %}
        <li class="menu__list-item
                   {% if menu.lists %}
                   menu__list-hasSupList
                   {% endif %}
                    ">
          <a href="{{ menu.link }}"
             class="link link--default menu__list-link
                   {% if menu.isActive %}
                   menu__list-link--active
                   {% endif %}
                   ">
            <i class="material-icons menu__list-icon">{{ menu.icon }}</i>
            <span class="menu__list-label">{{ menu.label }}</span>
          </a>

          {% if menu.lists %}
            <ul class="menu__dropMenu
                {% if menu.isActive %}
                {% else %}
                menu__dropMenu--hidden
                {% endif %}
              ">
              {% for list in menu.lists %}
                <li class="menu__dropMenu-item
                           {% if list.isActive  %}
                           isActive
                           {% endif %}">
                  <a class="link link--default" href="{{ list.link }}">{{ list.label }}</a>
                </li>
              {% endfor %}
            </ul>
          {% endif %}
        </li>
      {% endfor %}
    </ul>
  </nav>

  <div class="aside__footer">
    Â© 2020 Max Priymak
  </div>

</div>
